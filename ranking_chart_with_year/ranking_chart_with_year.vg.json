{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/yeanle/DV2.1.1/main/Constructor_results(combine).csv"
    },
    "vconcat": [
      {
        "width": 480,
        "title": {
          "text": "F1 Ranking form 1950 to 2017",
          "frame": "bounds"
        },
        "transform": [
          {
            "sort": [
              {"field": "position", "order": "descending"}
            ],
            "window": [{"op": "rank", "as": "rank"}],
            "groupby": ["position"]
          },
          {"filter": "datum.position < 5"}
        ],
        "mark": {"type": "line", "orient": "vertical"},
        "encoding": {
          "x": {"field": "year", "type": "ordinal"},
          "y": {"field": "rank", "type": "ordinal"},
          "color": {
            "field": "name_constructor",
            "type": "nominal"
            
          }
        }
      },
      {
        "width": 480,
        "height": 60,
        "title":"hello",
        "mark": {"type": "area"},
        "params": [
          {
            "name": "brush",
            "select": {"type": "interval", "encodings": ["x"]}
          }
        ],
        "encoding": {
          "x": {"field": "year", "type": "ordinal"},
          "y": {"field": "position", "type": "quantitative"},
          "color": {
            "field": "surename",
            "type": "nominal",
            "scale": {
              "domain": ["Germany", "Mexico", "South Korea", "Sweden"],
              "range": ["black", "#127153", "#C91A3C", "#0C71AB"]
            }
          }
        }
      }
    ]
  }
  